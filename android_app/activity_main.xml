<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.shaolun.homework9.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/main_header"
        android:text="@string/main_header"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_street"
        android:textColor="#000000"
        android:id="@+id/main_street"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/text_street"
        android:textColor="#000000"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_city"
        android:textColor="#000000"
        android:id="@+id/main_city"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="140dp"
        />

    <EditText
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/text_city"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="130dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_state"
        android:textColor="#000000"
        android:id="@+id/main_state"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="180dp"
        />

    <Spinner
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/mySpinner"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="180dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_degree"
        android:textColor="#000000"
        android:id="@+id/main_degree"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="220dp"
         />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="214dp"
        android:layout_marginLeft="90dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_fahrenheit"
            android:checked="true"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_celsius"
            android:id="@+id/radioButton2" />
    </RadioGroup>

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="@string/main_search"
        android:id="@+id/search"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="10dp"
        android:background="#FFFFFF"
        android:onClick="search"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="@string/main_clear"
        android:id="@+id/clear"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="130dp"
        android:background="#FFFFFF"
        android:onClick="clear"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/main_about"
        android:id="@+id/about"
        android:onClick="aboutMe"
        android:layout_marginTop="420dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="@string/main_forecast"
        android:id="@+id/link"
        android:textColor="#000000"
        android:textColorLink="@android:color/black"
        android:layout_marginTop="445dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/main_power"
        android:textColor="#000000"
        android:id="@+id/power"
        android:layout_marginTop="420dp"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/alertText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:textColor="#ce2a0d" />

</RelativeLayout>
